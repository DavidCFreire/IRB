<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             Style="{DynamicResource corFundoStyle}"
             mc:Ignorable="d"
             x:Class="IRB.Views.PerfilPage"
             Title="Mais">
    <ContentPage.Content>
        <TableView Intent="Settings" HasUnevenRows="True">
            <TableRoot>
                <TableSection>
                    <ViewCell>
                        <Grid Padding="16,26">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image>
                                <Image.Source>
                                    <FontImageSource
                                        FontFamily="{StaticResource FontAwesomeRegular}"
                                        Glyph="{x:Static fontawesome:FontAwesomeIcons.UserCircle}"
                                        Color="{DynamicResource TextDark}"/>
                                </Image.Source>
                            </Image>
                            <Grid Grid.Column="1"
                                  VerticalOptions="Center"
                                  Padding="5,0" RowSpacing="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label FontAttributes="Bold"
                                   Text="{Binding Usuario}"
                                   FontSize="Large"/>
                                <Label Grid.Row="1"
                                       Text="{Binding Email}"
                                       TextColor="{DynamicResource Accent}"
                                       FontSize="Micro"/>
                            </Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PerfilCommand}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </ViewCell>
                    <ViewCell>
                        <Grid Padding="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image HeightRequest="16">
                                <Image.Source>
                                    <FontImageSource
                                        FontFamily="{StaticResource FontAwesomeBrands}"
                                        Glyph="{x:Static fontawesome:FontAwesomeIcons.Diaspora}"
                                        Color="{DynamicResource TextDark}"/>
                                </Image.Source>
                            </Image>
                            <Grid VerticalOptions="Center"
                                  Grid.Column="1"
                                  Padding="16,0"
                                  RowSpacing="0">
                                <Label FontAttributes="None"
                                   Text="Alterar Senha"
                                   VerticalOptions="Center"
                                   FontSize="Default"/>
                            </Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding PerfilCommand}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </ViewCell>
                    <ViewCell>
                        <Grid Padding="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image HeightRequest="16">
                                <Image.Source>
                                    <FontImageSource
                                        FontFamily="{StaticResource FontAwesomeSolid}"
                                        Glyph="{x:Static fontawesome:FontAwesomeIcons.SignOutAlt}"
                                        Color="{DynamicResource TextDark}"/>
                                </Image.Source>
                            </Image>
                            <Grid VerticalOptions="Center"
                                  Grid.Column="1"
                                  Padding="16,0"
                                  RowSpacing="0">
                                <Label FontAttributes="None"
                                   Text="Sair"
                                   VerticalOptions="Center"
                                   FontSize="Default"/>
                            </Grid>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SairCommand}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </ViewCell>
                </TableSection>
                <TableSection>
                    <ViewCell>
